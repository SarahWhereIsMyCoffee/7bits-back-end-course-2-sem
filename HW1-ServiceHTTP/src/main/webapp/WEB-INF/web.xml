<?xml version="1.0"?>

<web-app>
    <servlet>
        <servlet-name>singleTaskServlet</servlet-name>
        <servlet-class>it.sevenbits.ServiceHTTP.servlets.SingleTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>singleTaskServlet</servlet-name>
        <url-pattern>/task</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>multipleTaskServlet</servlet-name>
        <servlet-class>it.sevenbits.ServiceHTTP.servlets.MultipleTasksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>multipleTaskServlet</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>authorizationServlet</servlet-name>
        <servlet-class>it.sevenbits.ServiceHTTP.servlets.AuthorizationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorizationServlet</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

</web-app>

